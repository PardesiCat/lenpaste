{{define "titlePrefix"}}{{if .Title}}{{.Title}}{{else}}{{.ID}}{{end}} | {{end}}
{{define "article"}}
{{if .Title}}<input class="stretch-width" value="{{.Title}}" tabindex=1 readonly>
{{end}}

{{if not .OneUse}}
<p style="text-align: right;"><a style="button" href="/raw/{{.ID}}" tabindex=2>Raw</a> <a href="/dl/{{.ID}}" tabindex=3>Download</a></p>
{{end}}

<textarea wrap="off" rows=25 autofocus tabindex=2 readonly>{{.Body}}</textarea>

<p>Created: {{.CreateTimeStr}}</p>

{{if .OneUse}}
<p>Expires: <span class="text-red">Now</span></p>
{{else if eq .DeleteTime 0}}
<p>Expires: Never</p>
{{else}}
<p>Expires: {{.DeleteTimeStr}}</p>
{{end}}

{{end}}
