{{define "titlePrefix"}}{{if .Title}}{{.Title}}{{else}}{{.ID}}{{end}} | {{end}}
{{define "article"}}
{{if .Title}}<h3>{{.Title}}</h3>{{end}}
<textarea wrap="off" rows=30 autofocus tabindex=1 readonly>{{.Body}}</textarea>

<p>Created: {{.CreateTimeStr}}

{{if .OneUse}}
<p>Expires: <span class="text-red">Now</span></p>
{{else if eq .DeleteTime 0}}
<p>Expires: Never</p>
{{else}}
<p>Expires: {{.DeleteTimeStr}}</p>
{{end}}

{{end}}
