<!doctype html>
<html>
	<head>
		<meta charset="utf-8">
		<title>Read | Lenpaste</title>
		<link rel="stylesheet" type="text/css" href="/style.css"/>
	</head>
	<body>
		<header>
			<h2><a class="titleA" href=/>Lenpaste</a></h2>
		</header>
		<div class="main">
			<h3>{{.Title}}</h3>
			<p><textarea wrap="off" autofocus tabindex=1 rows=30 cols=100 readonly>{{.Text}}</textarea></p>
			{{if .OneUse}}
			<p>This paste has been removed!</p>
			{{else}}
			<p>Expires in: {{.ExpiresDay}} days, {{.ExpiresHour}} hours, {{.ExpiresMin}} minutes</p>
			{{end}}
		</div>
		<footer>
			<p>
				<a href=/rules class="footerA">Server rules</a>
				<a href=/api class="footerA">API</a>
				<a href=/version class="footerA">Version</a>
			</p>
		</footer>
	</body>
</html>
